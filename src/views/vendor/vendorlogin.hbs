<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Vendor Login Page</title>
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Hover effect */
        .nav-link:hover {
            color: #020202; /* White text color on hover */
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            border-radius: 1rem;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg fs-5 navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">Buy and Sell System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-start" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link text-center" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-center" href="/vendor/registration">Sign Up</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Login Form -->
    <div class="container mt-5">
        <div class="row justify-content-center ">
            <div class="col-md-4">
                <div class="card shadow p-3 mb-4 bg-white rounded-4">
                    <div class="card-body">
                        <h1 class="card-title text-center mb-4">Vendor Login</h1>
                        <form action="/vendor/vendorsignin" method="post">
                            <div class="mb-3">
                                <label for="userId" class="form-label">User ID</label>
                                <input type="text" class="form-control" placeholder="Enter Your User Id" name="user"
                                    id="user" required>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" class="form-control" placeholder="Enter Your Password" name="pass"
                                    id="pass" required>
                            </div>
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary"
                                    style="background: linear-gradient(to right, #8f43b0, #2196f3); border: none;">Continue</button>
                            </div>
                            <a class="btn btn-danger mt-3" href="/vendor/registration" role="button">Don't have a account!</a>
                        </form>

                        {{#if message}}
                            <p class="text-center small text-danger mt-3">{{message}}</p>
                            <p class="text-center small text-danger mt-3">**Check junk/spam mail**</p>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
