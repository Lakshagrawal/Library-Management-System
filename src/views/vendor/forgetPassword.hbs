<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Forget password | Vendor page </title>
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        /* Hover effect */
        .nav-link:hover {
            border-radius: 2rem;
            color: #fff; /* White text color on hover */
            background-color: #35c3cd; /* Darker shade of primary color on hover */
            border-color: #0b5ed7; /* Darker shade of primary color on hover */
        }
    </style>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg fs-5 navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">Buy and Sell System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-start" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link text-center" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-center" href="/vendor/registration">Sign Up</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-center" href="/vendor">Sign In</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    {{!-- Popup --}}
    {{#if popup}}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <div class="text-center">
                {{popup}}
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {{/if}}

    {{!-- PopupSuccess --}}
    {{#if popupSuccess}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <div class="text-center">
            {{popupSuccess}}
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}

    <!-- Forget Password Form -->
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card shadow p-3 mb-4 bg-white rounded-4">
                    <div class="card-body">
                        <h1 class="card-title text-center mb-4">Forget Password</h1>
                        <form action="/vendor/forgetpassword" method="post" class="">
                            <div class="mb-3">
                                <label for="userId" class="form-label">User ID</label>
                                <input type="text" class="form-control" placeholder="Enter Your User Id" name="user_id"
                                    id="user_id" required>
                            </div>
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary" style="background: linear-gradient(to right, #8f43b0, #2196f3); border: none;">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
