<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Items Table</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>

<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col d-flex justify-content-between">
                <div>
                    <a href="/vendor" class="btn btn-primary btn-lg mb-3">Back</a>
                </div>
                <div>
                    <a href="/vendor/logout" class="btn btn-primary btn-lg mb-3">Logout</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Vendor Items Table</h1>
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">S.No.</th>
                    <th scope="col">Name</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Biding Amount</th>
                    <th scope="col">Status</th>
                    <th scope="col">User Detail</th>
                </tr>
            </thead>
            <tbody>
                {{#each items}}
                <tr>
                    <td>{{@index}}</td>
                    <td>{{this.items.name}}</td>
                    <td>{{this.items.quantity}}</td>
                    <td>{{this.items.total}}</td>
                    <td>
                        <select class="form-select status-dropdown" data-id="{{this._id}}">
                            <option value="Pending" {{#if (eq this.status "Pending" )}}selected{{/if}}>Pending</option>
                            <option value="Order" {{#if (eq this.status "Order" )}}selected{{/if}}>Order</option>
                        </select>
                    </td>
                    <td>
                        <div class="accordion" id="accordionExample{{@index}}">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#collapse{{@index}}" aria-expanded="false"
                                        aria-controls="collapse{{@index}}">
                                        User #{{@index}}
                                    </button>
                                </h2>
                                <div id="collapse{{@index}}" class="accordion-collapse collapse"
                                    data-bs-parent="#accordionExample{{@index}}">
                                    <div class="accordion-body">
                                       <p>Name: {{this.userInfo.userName}}</p> 
                                       <p>Mobile No.: {{this.userInfo.mobile}}</p> 
                                       <p>City: {{this.userInfo.city}}</p> 
                                       <p>Pincode: {{this.userInfo.pincode}}</p> 
                                       <p>State: {{this.userInfo.state}}</p> 
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS (optional if you don't need JavaScript features from Bootstrap) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

    <!-- Include Handlebars library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const statusDropdowns = document.querySelectorAll('.status-dropdown');

            statusDropdowns.forEach(dropdown => {
                dropdown.addEventListener('change', function () {
                    const itemId = this.getAttribute('data-id');
                    const newStatus = this.value;

                    fetch(`/vendor/updateStatus/${itemId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ status: newStatus })
                    })
                        .then(response => {
                            if (response.ok) {
                                console.log('Status updated successfully');
                            } else {
                                console.error('Failed to update status');
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                        });
                });
            });
        });
    </script>
</body>

</html>
