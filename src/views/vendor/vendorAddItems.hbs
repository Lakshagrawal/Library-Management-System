<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Add Items</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
  <div class="container mt-5">
     <div class="container d-flex justify-content-between mt-4">
      <div class="col-lg-2 col-md-4">
        <a href="/vendor" class="btn btn-primary btn-lg btn-block mb-3">Back</a>
      </div>
      <div class="col-lg-2 col-md-4">
        <a href="/vendor/logout" class="btn btn-primary btn-lg btn-block mb-3">Logout</a>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6 offset-lg-3">
        <div class="card">
          <div class="card-header">
            <h1 class="card-title text-center">Add Item To Your Shop</h1>
          </div>
          <div class="card-body">
            <form action="/vendor/addItems/{{id}}" method="post" enctype="multipart/form-data" id="addItemForm">
              <div class="mb-3">
                <label for="itemname" class="form-label">Item Name</label>
                <input type="text" class="form-control" id="itemname" name="itemname" required>
              </div>
              <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="text" class="form-control" id="price" name="price" required>
              </div>
              <div class="mb-3">
                <label for="img" class="form-label">Image</label>
                <input type="file" class="form-control" id="img" name="img" accept="image/*" required>
                <div class="form-text">Image should have a size less than 4 MB</div>
              </div>

              <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-block">Add Item</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
    <script>
    document.getElementById("addItemForm").addEventListener("submit", function (event) {
      var fileInput = document.getElementById('img');
      var filePath = fileInput.value;
      var allowedExtensions = /(\.png|\.jpg|\.jpeg|\.gif)$/i;

      if (!allowedExtensions.exec(filePath)) {
        alert('Please upload file having extensions .png, .jpg, .jpeg, or .gif only.');
        event.preventDefault();
        return false;
      }
      
      var fileSize = fileInput.files[0].size; // in bytes
      var maxSize = 4 * 1024 * 1024; // 4 MB

      if (fileSize > maxSize) {
        alert('Image size should be less than 4 MB.');
        event.preventDefault();
        return false;
      }
    });
  </script>
</body>

</html>
