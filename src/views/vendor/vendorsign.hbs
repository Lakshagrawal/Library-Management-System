<body id="top">


    <!-- preloader
    ================================================== -->
    <div id="preloader">
        <div id="loader" class="dots-fade">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>


    {{#if error}}
    {{#if (eq error 'MissingFields')}}
    <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">Please fill in all the fields.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{else if (eq error 'UsernameTaken')}}
    <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">Username is already taken.Please choose another one.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}
    {{/if}}
    <header class="s-header mt-4">


        <nav class="s-header__nav-wrap container">
            <div class="row justify-content-between">
                <div class="col-auto">
                    <a href="/" class="btn btn-primary">Home</a>
                </div>
                <div class="col-auto">
                    <a href="/vendor/" class="btn btn-primary">Login</a>
                </div>
            </div>
        </nav>


    </header> <!-- Header End -->




    <div class="container">
        <form action="/vendor/vendorsignup" method="post">
            <h1 class="title text-center mt-4">VendorRegistration</h1>
            <div class="mb-3">
                <label for="userId" class="form-label">User ID</label>
                <input type="text" class="form-control" name="user" id="userId" aria-describedby="userIdHelp" required>
                <div id="userIdHelp" class="form-text">Enter your user ID.</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email" name="email" id="email" class="form-control" aria-describedby="emailHelp" required>
                <div id="emailHelp" class="form-text">We'll share your email with our trusted user.</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="pass" id="password" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="mobile" class="form-label">Mobile Number</label>
                <input type="tel" name="mobile" id="mobile" class="form-control" aria-describedby="mobileHelp" required>
                <div id="mobileHelp" class="form-text">Enter your mobile number.</div>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Submit</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
