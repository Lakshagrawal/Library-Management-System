<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>User Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        /* Hover effect */
        .nav-link:hover {
            color: #fff; /* White text color on hover */
            background-color: #35c3cd; /* Darker shade of primary color on hover */
            border-color: #0b5ed7; /* Darker shade of primary color on hover */
            border-radius: 1rem;
            text-align: center;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg fs-5 navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand fs-4" href="/">Buy and Sell System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link text-center fs-5 mx-2" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-center fs-5 mx-2" href="/user/categories">All Vendors</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-center fs-5 mx-2" href="/user/cart">Cart</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-center fs-5 mx-2" href="/user/userorderstatus">Order Status</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-center fs-5 mx-2" href="/user/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <h1 class="text-center my-3">User Interface</h1>
    <div class="container mt-1">
        <img src="/static/images/muser 1.jpg" class="img-fluid my-3" alt="photo 1">
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.dropdown-item').click(function () {
                var category = $(this).data('value');
                $('#category').val(category);
                $('.btn-secondary').text(category); // Update dropdown button text

                // Update link href based on selected category
                $('#itemsLink').attr('href', '/user/allItems/{{id}}?category=' + category);
            });
        });

    </script>
</body>

</html>
