<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>User All Items</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container d-flex justify-content-between mt-4">
        <div class="col-lg-2 col-md-4">
            <a href="/user/categories/" class="btn btn-primary btn-lg btn-block mb-3">Back</a>
        </div>
        <div class="col-lg-2 col-md-4">
            <a href="/user/logout" class="btn btn-primary btn-lg btn-block mb-3">Logout</a>
        </div>
    </div>
    <div class="container mt-4">
        <h1 class="mb-5 text-center">Vendor All Items</h1>
        <div class="row">
                {{#each items}}
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="{{this.img}}" class="card-img-top" alt="{{this.itemname}}">
                        <div class="card-body">
                            <h5 class="card-title">{{this.itemname}}</h5>
                            <p class="card-text">Price: {{this.price}}</p>
                            {{#if this.data}}
                            <a href="/user/userCart/?vendorid={{this.data}}&itemid={{this._id}}" class="btn btn-success">Add
                                to Cart</a>
                            {{else}}
                            <p>Vendor ID not provided</p>
                            {{/if}}
                            {{!-- <a href="/user/userCart/?vendorid={{vendorid}}&itemid={{this._id}}"
                                class="btn btn-success">Add to Cart</a> --}}
                        </div>
                    </div>
                </div>
                {{/each}}
        </div>

    </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>